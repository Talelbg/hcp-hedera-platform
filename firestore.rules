rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is super admin
    function isSuperAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin';
    }
    
    // Helper function to check if user is regional admin
    function isRegionalAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'regional';
    }
    
    // Helper function to check if user is community admin
    function isCommunityAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'community';
    }
    
    // Helper function to check if user has access to a partner code
    function hasPartnerAccess(partnerCode) {
      let userData = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
      return userData.role == 'super_admin' || 
             (userData.assignedPartnerCodes is list && partnerCode in userData.assignedPartnerCodes);
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own document
      allow read: if isAuthenticated() && request.auth.uid == userId;
      // Super admins can read/write all users
      allow read, write: if isSuperAdmin();
      // Users can update their own lastLogin
      allow update: if isAuthenticated() && 
                       request.auth.uid == userId && 
                       request.resource.data.diff(resource.data).affectedKeys().hasOnly(['lastLogin']);
      // Allow creating own user document on first login
      allow create: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Developers collection
    match /developers/{developerId} {
      // Super admins have full access
      allow read, write: if isSuperAdmin();
      // Regional and community admins can read developers in their assigned partner codes
      allow read: if isAuthenticated() && 
                     (isRegionalAdmin() || isCommunityAdmin()) && 
                     hasPartnerAccess(resource.data.partnerCode);
      // Only super admins can create/update developers
      allow create, update: if isSuperAdmin();
    }
    
    // Batches collection (CSV upload history)
    match /batches/{batchId} {
      // Super admins have full access
      allow read, write: if isSuperAdmin();
      // All authenticated users can read batch info
      allow read: if isAuthenticated();
    }
    
    // Communities collection
    match /communities/{communityId} {
      // All authenticated users can read communities
      allow read: if isAuthenticated();
      // Only super admins can write
      allow write: if isSuperAdmin();
    }
    
    // Invoices collection
    match /invoices/{invoiceId} {
      // Super admins have full access
      allow read, write: if isSuperAdmin();
      // Regional and community admins can read invoices for their partner codes
      allow read: if isAuthenticated() && hasPartnerAccess(resource.data.partnerCode);
    }
    
    // Events collection
    match /events/{eventId} {
      // Super admins have full access
      allow read, write: if isSuperAdmin();
      // Regional and community admins can manage events for their partner codes
      allow read, write: if isAuthenticated() && hasPartnerAccess(resource.data.partnerCode);
    }
    
    // Campaigns collection
    match /campaigns/{campaignId} {
      // Only super admins can manage campaigns
      allow read, write: if isSuperAdmin();
      // Regional admins can read campaigns
      allow read: if isRegionalAdmin();
    }
    
    // Agreements collection
    match /agreements/{agreementId} {
      // Super admins have full access
      allow read, write: if isSuperAdmin();
      // Regional and community admins can read their agreements
      allow read: if isAuthenticated() && hasPartnerAccess(resource.data.partnerCode);
    }
  }
}
